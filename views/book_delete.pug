extends layout

block content

  h1 #{title}

  if bookInstance_books.length

    p #[strong Delete the following book instances before attempting to delete this book.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Books
      dl
        each bookInstance in bookInstance_books
          dt
            a(href=bookInstance.url) #{bookInstance.status} - #{bookInstance.due_back_formatted}

  else
    p Do you really want to delete this book?

    form(method='POST')
      div.form-group
        input#authorid.form-control(type='hidden', name='bookid', value=books._id )

      button.btn.btn-primary(type='submit') Delete